<?xml version="1.0"?>
<config>
    <modules>
        <Veles_CustomerCredit>
            <version>0.0.1</version>
        </Veles_CustomerCredit>
    </modules>
    <global>
        <models>
            <customercredit>
                <class>Veles_CustomerCredit_Model</class>
            </customercredit>
        </models>
        <blocks>
            <customercredit>
                <class>Veles_CustomerCredit_Block</class>
            </customercredit>
        </blocks>
        <helpers>
            <customercredit>
                <class>Veles_CustomerCredit_Helper</class>
            </customercredit>
        </helpers>
        <resources>
            <customercredit>
                <setup>
                    <module>Veles_CustomerCredit</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customercredit>
        </resources>
        <pdf>
            <totals>
                <customercredit translate="title">
                    <title>Customer Credit</title>
                    <source_field>customercredit_amount</source_field>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>650</sort_order>
                    <amount_prefix></amount_prefix>
                </customercredit>
            </totals>
        </pdf>
        <fieldsets>
            <sales_convert_quote_address>
                <customercredit_amount>
                    <to_order>*</to_order>
                </customercredit_amount>
                <base_customercredit_amount>
                    <to_order>*</to_order>
                </base_customercredit_amount>
            </sales_convert_quote_address>
        </fieldsets>
        <events>
            <paypal_prepare_line_items>
                <observers>
                    <paypal_prepare_line_items>
                        <class>customercredit/observer</class>
                        <method>updatePaypalTotal</method>
                    </paypal_prepare_line_items>
                </observers>
            </paypal_prepare_line_items>
            <sales_order_invoice_save_after>
                <observers>
                    <sales_order_invoice_save_after>
                        <class>customercredit/observer</class>
                        <method>invoiceSaveAfter</method>
                    </sales_order_invoice_save_after>
                </observers>
            </sales_order_invoice_save_after>
            <sales_order_creditmemo_save_after>
                <observers>
                    <sales_order_creditmemo_save_after>
                        <class>customercredit/observer</class>
                        <method>creditmemoSaveAfter</method>
                    </sales_order_creditmemo_save_after>
                </observers>
            </sales_order_creditmemo_save_after>
        </events>
        <sales>
            <quote>
                <totals>
                    <customercredit>
                        <class>customercredit/sales_quote_address_total_customerCredit</class>
                        <renderer>customercredit/checkout_totals_customerCredit</renderer>
                        <admin_renderer>customercredit/adminhtml_sales_order_create_totals_customerCredit</admin_renderer>
                    </customercredit>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <customercredit>
                        <class>customercredit/sales_order_total_invoice_customerCredit</class>
                    </customercredit>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <customercredit>
                        <class>customercredit/sales_order_total_creditmemo_customerCredit</class>
                    </customercredit>
                </totals>
            </order_creditmemo>
        </sales>
    </global>
    <frontend>
        <layout>
            <updates>
                <customercredit>
                    <file>veles_customercredit.xml</file>
                </customercredit>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <customercredit>
                    <file>veles_customercredit.xml</file>
                </customercredit>
            </updates>
        </layout>
    </adminhtml>
</config>