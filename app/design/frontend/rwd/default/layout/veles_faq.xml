<?xml version="1.0" ?>
<layout>

    <!-- faq index -->
    <velesfaq_index_index>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="velesfaq/faq" name="faq.index" template="veles_faq/index.phtml" />
        </reference>
        <reference name="right">
            <block type="velesfaq/faq" before="product_compare_sidebar" name="veles_faq.categories" template="veles_faq/sidebar/categories.phtml">
                <label>FAQ Categories</label>
            </block>
        </reference>
        <reference name="left">
            <block type="velesfaq/faq" before="product_compare_sidebar" name="veles_faq.categories" template="veles_faq/sidebar/categories.phtml">
                <label>FAQ Categories</label>
            </block>
        </reference>
    </velesfaq_index_index>

    <!-- single faq category -->
    <velesfaq_index_category>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="velesfaq/category" name="faq.category" template="veles_faq/category.phtml"/>
        </reference>
        <reference name="right">
            <block type="velesfaq/faq" before="product_compare_sidebar" name="veles_faq.categories" template="veles_faq/sidebar/categories.phtml">
                <label>FAQ Categories</label>
            </block>
        </reference>
        <reference name="left">
            <block type="velesfaq/faq" before="product_compare_sidebar" name="veles_faq.categories" template="veles_faq/sidebar/categories.phtml">
                <label>FAQ Categories</label>
            </block>
        </reference>
    </velesfaq_index_category>

    <!-- single question -->
    <velesfaq_index_view>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="velesfaq/view" name="faq.question" template="veles_faq/view.phtml" />
        </reference>
        <reference name="right">
            <block type="velesfaq/faq" before="product_compare_sidebar" name="veles_faq.categories" template="veles_faq/sidebar/categories.phtml">
                <label>FAQ Categories</label>
            </block>
        </reference>
        <reference name="left">
            <block type="velesfaq/faq" before="product_compare_sidebar" name="veles_faq.categories" template="veles_faq/sidebar/categories.phtml">
                <label>FAQ Categories</label>
            </block>
        </reference>
    </velesfaq_index_view>

</layout>